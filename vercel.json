{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist/angular-echarts-dashboard",
        "nodeVersion": "22.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/(assets/.+)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.+\\.[a-z0-9]{5}\\.)(js|css|png|jpg|jpeg|gif|webp|svg|ico)$",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1$2"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

